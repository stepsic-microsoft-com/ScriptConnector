{
    "swagger": "2.0",
    "info": {
        "version": "v1",
        "title": "Script",
        "description": "A simple connector for executing JavaScript expressions."
    },
    "host": "localhost:1337",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/script": {
            "post": {
                "tags": [
                    "Script"
                ],
                "summary": "Run expression",
                "description": "Run one or more simple JavaScript expressions. You can pass in an object that contains some context to operate on.",
                "operationId": "runScriptWithSandbox",
                "consumes": [
                    "application/json",
                    "text/json"
                ],
                "produces": [
                    "application/json",
                    "text/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Parameters for running the script.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/RunParameters"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ResultObject"
                        }
                    },
                    "default": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ResultObject"
                        }
                    }
                },
                "deprecated": false
            }
        },
        "/trigger": {
            "post": {
                "tags": [
                    "Script"
                ],
                "summary": "Trigger on expression",
                "description": "Write a simple expression to determine if the Logic app should trigger. If you return false from your expression, the Logic app will not trigger. If you return anything else, it will and you can use the data that is returned.",
                "operationId": "runTriggerScriptWithSandbox",
                "consumes": [
                    "application/json",
                    "text/json"
                ],
                "produces": [
                    "application/json",
                    "text/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Parameters for running the script.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/RunParameters"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ResultObject"
                        }
                    },
                    "default": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ResultObject"
                        }
                    }
                },
                "deprecated": false,
                "x-ms-scheduler-trigger" : "poll"
            }
        }
    },
    "definitions": {
        "RunParameters": {
            "type": "object",
            "properties": {
                "code": {
                	"x-ms-summary" : "JavaScript expression",
                	"description" : "Provide one or more lines of JavaScript code separated by ';'. You can reference any properties you provide in the context object.",
                    "type": "string"
                },
                "sandbox": {
                    "$ref": "#/definitions/SandboxObject"
                }
            }
        },
        "SandboxObject": {
             "x-ms-summary" : "Context object",
             "description" : "Provide a JSON object to use as context inside the code expression.",
             "type": "object",
            "properties" : {},
            "additionalProperties" : true
        },
        "ResultObject": {
             "x-ms-summary" : "Result object",
             "description" : "The data that you return from your code. You must include a return statement to have a value be output.",
             "type": "object",
            "properties" : {},
            "additionalProperties" : true
        }
    }
}